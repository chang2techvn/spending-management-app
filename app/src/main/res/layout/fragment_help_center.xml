<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".ui.helpcenter.HelpCenterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- FAQ Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_faq_title"
            android:textSize="18sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- FAQ Item 1 -->
                <LinearLayout
                    android:id="@+id/faq1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/faq1_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_q1"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_faq_add"
                        android:drawablePadding="12dp"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/faq1_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_a1"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:paddingStart="36dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp"/>

                <!-- FAQ Item 2 -->
                <LinearLayout
                    android:id="@+id/faq2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/faq2_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_q2"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_faq_edit"
                        android:drawablePadding="12dp"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/faq2_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_a2"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:paddingStart="36dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp"/>

                <!-- FAQ Item 3 -->
                <LinearLayout
                    android:id="@+id/faq3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/faq3_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_q3"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_faq_chart"
                        android:drawablePadding="12dp"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/faq3_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_a3"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:paddingStart="36dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp"/>

                <!-- FAQ Item 4 -->
                <LinearLayout
                    android:id="@+id/faq4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/faq4_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_q4"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_faq_backup"
                        android:drawablePadding="12dp"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/faq4_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_a4"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:paddingStart="36dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp"/>

                <!-- FAQ Item 5 -->
                <LinearLayout
                    android:id="@+id/faq5_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/faq5_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_q5"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/ic_faq_ai"
                        android:drawablePadding="12dp"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/faq5_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_faq_a5"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:paddingStart="36dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ask AI Assistant Button -->
        <Button
            android:id="@+id/ask_ai_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_ask_ai_button"
            android:backgroundTint="@color/primaryBlue"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_faq_ai"
            app:iconGravity="textStart"
            app:iconPadding="8dp"/>

    </LinearLayout>
</ScrollView>