<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="?android:attr/colorBackground"
    android:orientation="horizontal"
    android:padding="4dp">

    <!-- Trang chủ -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:tint="@color/nav_item_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_home"
            android:textColor="@color/nav_item_color"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Thống kê -->
    <LinearLayout
        android:id="@+id/nav_statistics"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bar_chart"
            android:tint="@color/nav_item_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_statistics"
            android:textColor="@color/nav_item_color"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Trợ lý AI (Middle Button) -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/nav_ai_assistant"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ai_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_chat" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Lịch sử -->
    <LinearLayout
        android:id="@+id/nav_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            android:tint="@color/nav_item_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_history"
            android:textColor="@color/nav_item_color"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Tài khoản -->
    <LinearLayout
        android:id="@+id/nav_account"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user"
            android:tint="@color/nav_item_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_account"
            android:textColor="@color/nav_item_color"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
