<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".presentation.fragment.account.HelpSupportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Quay lại" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trợ giúp &amp; Hỗ trợ"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi thường gặp và hỗ trợ"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- FAQ Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi thường gặp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 1 -->
                <LinearLayout
                    android:id="@+id/faq1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ứng dụng Quản lý Chi tiêu là gì?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đây là ứng dụng giúp bạn theo dõi và quản lý chi tiêu cá nhân, đặt ngân sách, xem thống kê và lịch sử giao dịch."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 2 -->
                <LinearLayout
                    android:id="@+id/faq2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để thiết lập ngân sách?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn có thể vào trang Ngân sách và nhấn nút '+' để tạo ngân sách mới, hoặc trò chuyện với AI bằng ngôn ngữ tự nhiên để thiết lập ngân sách một cách dễ dàng."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 3 -->
                <LinearLayout
                    android:id="@+id/faq3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để xem báo cáo chi tiêu?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vào trang Thống kê để xem các biểu đồ và báo cáo chi tiêu."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 4 -->
                <LinearLayout
                    android:id="@+id/faq4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để đổi mật khẩu?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vào Tài khoản > Đổi mật khẩu để cập nhật mật khẩu mới."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 5 -->
                <LinearLayout
                    android:id="@+id/faq5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để liên hệ hỗ trợ?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sử dụng nút Feedback hoặc Trò chuyện với AI để liên hệ."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 6 -->
                <LinearLayout
                    android:id="@+id/faq6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để thêm chi tiêu?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trò chuyện với AI bằng ngôn ngữ tự nhiên để thêm chi tiêu một cách nhanh chóng."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 7 -->
                <LinearLayout
                    android:id="@+id/faq7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để sửa hoặc xóa chi tiêu?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trò chuyện với AI để sửa hoặc xóa chi tiêu bằng ngôn ngữ tự nhiên."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 8 -->
                <LinearLayout
                    android:id="@+id/faq8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để sửa ngân sách?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn có thể sử dụng chat AI để sửa hoặc xóa ngân sách một cách thuận tiện."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp" />

                <!-- FAQ 9 -->
                <LinearLayout
                    android:id="@+id/faq9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Làm thế nào để sử dụng Trò chuyện với AI?"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answer9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhấn nút 'AI' trên menu để mở khung chat. Bạn có thể sử dụng ngôn ngữ tự nhiên để thiết lập, thêm, sửa, xóa chi tiêu và ngân sách. Ví dụ: 'Thêm chi tiêu 50k cho ăn uống hôm nay' hoặc 'Tạo ngân sách 2 triệu cho tháng này'. AI sẽ giúp bạn thực hiện các thao tác một cách dễ dàng và nhanh chóng."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat_ai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trò chuyện với AI"
                android:textColor="@android:color/white"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feedback"
                android:textColor="@android:color/white"
                app:backgroundTint="#2196F3"
                app:cornerRadius="16dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>