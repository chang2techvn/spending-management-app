<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.spending_management_app.presentation.fragment.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.spending_management_app.presentation.fragment.statistics.StatisticsFragment"
        android:label="Thống kê"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.spending_management_app.presentation.fragment.history.HistoryFragment"
        android:label="Lịch sử"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.spending_management_app.presentation.fragment.account.AccountFragment"
        android:label="Tài khoản"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_navigation_account_to_navigation_help_support"
            app:destination="@id/navigation_help_support" />
    </fragment>

    <fragment
        android:id="@+id/navigation_help_support"
        android:name="com.example.spending_management_app.presentation.fragment.account.HelpSupportFragment"
        android:label="Trợ giúp &amp; Hỗ trợ"
        tools:layout="@layout/fragment_help_support" />

</navigation>