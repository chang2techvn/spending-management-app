<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.spending_management_app.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.spending_management_app.ui.statistics.StatisticsFragment"
        android:label="Thống kê"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.spending_management_app.ui.history.HistoryFragment"
        android:label="Lịch sử"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.spending_management_app.ui.account.AccountFragment"
        android:label="Tài khoản"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.spending_management_app.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.spending_management_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>